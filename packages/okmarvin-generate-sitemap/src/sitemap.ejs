<%_
  var items = data.files.map((file) => {
    return {
      permalink: data.site.url + file.permalink,
      dateModified: file.dateModified
    }
  });
_%>
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <%_ for (var i = 0, len = items.length; i < len; i++) { _%>
    <url>
      <loc><%= items[i]['permalink'] %></loc>
      <lastmod><%= format(items[i]['dateModified'], 'YYYY-MM-DD') %></lastmod>
    </url>
  <%_ } _%>
</urlset>